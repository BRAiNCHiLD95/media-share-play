{
	"name": "Ultimate Video Playback Controller",
	"description": "An Ultimate Controller for all your HTML5 Video Playback Speed Needs",
	"version": "1.3.0",
	"manifest_version": 2,
	"icons": {
		"128": "images/icon_128.png"
	},
	"browser_action": {
		"default_title": "Ultimate Video Playback Controller",
		"default_icon": {
			"16": "images/icon_16.png",
			"24": "images/icon_24.png",
			"32": "images/icon_32.png"
		},
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"http://www.netflix.com/watch/*",
				"https://www.netflix.com/watch/*",
				"http://www.primevideo.com/detail/*",
				"https://www.primevideo.com/detail/*",
				"http://www.hotstar.com/in*",
				"https://www.hotstar.com/in*"
			],
			"js": ["content.js"],
			"css": ["content.css"]
		}
	],
	"web_accessible_resources": ["images/cogs.svg"],
	"permissions": ["tabs"]
}
